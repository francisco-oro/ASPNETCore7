@using ViewsExample.Models
@model Person

<!DOCTYPE html>
<html>
<head>
    <title>Person Details</title>
    <meta charset="UTF-8"/>
    <link href="StyleSheet.css" rel="stylesheet"/>
</head>
<body>
<h1>Person Details</h1>
<h3>@Model.Name</h3>
<table>
    <tbody>
    <tr>
        <td>Gender</td>
        <td>@Model.PersonGender</td>
    </tr>    
    <tr>
        <td>Date of Birth</td>
        <td>@Model.DateOfBirth?.ToString("MM/dd/yyyy")</td>
    </tr>
    </tbody>
</table>
</body>
</html>